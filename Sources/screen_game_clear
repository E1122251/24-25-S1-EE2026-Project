module screen_game_clear(
    input clock_100mhz,
    input [12:0] pixel_index,
    input game_active,
//    input mode,
//    input difficulty,
    input score,
    input btnC,
    
    output reg toggle_game_clear_screen,
    output reg [15:0] oled_data_game_clear,
    output reg return_to_menu = 0
    );
    reg [2:0] mod ;
    reg [2:0] difficulty ;
    always @ (posedge clock_100mhz) begin
        if (game_active == 1 && mod == 0) begin
            if (difficulty ==0 && score >= 100) begin
                toggle_game_clear_screen <= toggle_game_clear_screen;
                    if (btnC ==1) begin
                        return_to_menu <= 1;
                        end
                end
            else if (difficulty ==1 && score >= 200) begin
                toggle_game_clear_screen <= toggle_game_clear_screen;
                    if (btnC ==1) begin
                        return_to_menu <= 1;
                        end
                end
            if (toggle_game_clear_screen == 1) begin
               oled_data_game_clear <= 16'hFFFF;
               //screen after clear not made yet
               end
        end
        else begin
            toggle_game_clear_screen <= 0;
            return_to_menu <= 0;
            end
        end

endmodule
